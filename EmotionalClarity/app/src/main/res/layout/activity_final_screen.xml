<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finalScreen">


    <ImageView
        android:id="@+id/refreshImageView2"
        android:layout_width="57dp"
        android:layout_height="62dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="refresh button - restarts every value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/homeicon" />

    <ImageView
        android:id="@+id/calenderImageView3"
        android:layout_width="57dp"
        android:layout_height="62dp"
        android:layout_marginEnd="67dp"
        android:contentDescription="calender button - for looking up old stories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/calendericon" />

    <Button
        android:id="@+id/circleFeelings4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="260dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/btn_background"
        android:tag="0"
        android:text="@string/feelings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/circleFeelings2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/btn_background"
        android:tag="0"
        android:text="@string/feelings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/userAudioPlayButton"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="296dp"
        android:contentDescription="@string/playButton"
        android:onClick="micOutputListener"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/playbutton" />

    <ImageView
        android:id="@+id/userPictureImageView"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="516dp"
        android:contentDescription="@string/pictureImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="212dp"
        android:layout_height="139dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teenager" />

    <Button
        android:id="@+id/circleFeelings1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/btn_background"
        android:tag="0"
        android:text="@string/feelings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/circleFeelings6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="344dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/btn_background"
        android:tag="0"
        android:text="@string/feelings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/circleFeelings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/btn_background"
        android:tag="0"
        android:text="@string/feelings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/circleFeelings3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="344dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/btn_background"
        android:tag="0"
        android:text="@string/feelings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/circleFeelings5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/btn_background"
        android:tag="0"
        android:text="@string/feelings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userInputBox"
        android:layout_width="331dp"
        android:layout_height="140dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="233dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="4dp"
        android:text="שתף הכל"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="3dp"
        android:text="שתף רגשות"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="שמור"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>