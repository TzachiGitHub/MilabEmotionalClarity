<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="359dp"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userInput"
        android:layout_width="359dp"
        android:layout_height="208dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/micStart"
        app:layout_constraintVertical_bias="0.363" />

    <ImageButton
        android:id="@+id/micStart"
        android:layout_width="57dp"
        android:layout_height="49dp"
        android:layout_marginStart="191dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/micButton"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintEnd_toStartOf="@+id/cameraButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/microphonebutton" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginStart="411dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="619dp"
        android:onClick="micOutputListener"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/playbutton"
        android:contentDescription="@string/playButton"/>


    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="107dp"
        android:contentDescription="@string/cameraButton"
        app:layout_constraintBottom_toTopOf="@+id/userInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/micStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/camerabutton" />

    <ImageView
        android:id="@+id/pictureImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/pictureImageView"/>

    <ImageButton
        android:id="@+id/textButton"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:fitsSystemWindows="false"
        android:focusableInTouchMode="false"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358"
        app:srcCompat="@drawable/textboxbutton"
        android:contentDescription="Activates the TextboxActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>